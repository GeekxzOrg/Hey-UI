page {
  /* Color 可以自定义相关配色 */
  /* 主题色 */
  --success: #67c23a;
  --error: #f56c6c;
  --warning: #ffbc00;
  --default: #409eff;
  /* 文字颜色 */
  --dark: #333333;
  --dark1: #555555;
  --dark2: #666666;
  --dark3: #777777;
  --dark4: #999999;
  /* 背景颜色 */
  --gray: #c1c1c1;
  --gray1: #d3d3d3;
  --gray2: #eeeeee;
  --gray3: #f3f3f3;
  --gray4: #f5f5f5;
}

 /* 主题色 */
 .h-bg-default {
	background-color: var(--default);
	color: var(--white);
}
 .h-bg-success {
	background-color: var(--success);
	color: var(--white);
}
 .h-bg-error {
	background-color: var(--error);
	color: var(--white);
}
 .h-bg-warning {
	background-color: var(--warning);
	color: var(--white);
}
 .h-bg-gray {
	background-color: var(--gray);
	color: var(--white);
}
 .h-bg-gray1 {
	background-color: var(--gray1);
	color: var(--white);
}
 .h-bg-gray2 {
	background-color: var(--gray2);
	color: var(--white);
}
 .h-bg-gray3 {
	background-color: var(--gray3);
	color: var(--white);
}
 .h-bg-gray4 {
	background-color: var(--gray4);
	color: var(--white);
}
/* 文字颜色 */
.h-text-dark{
	color: var(--dark);
}
.h-text-dark1{
	color: var(--dark1);
}
.h-text-dark2{
	color: var(--dark2);
}
.h-text-dark3{
	color: var(--dark3);
}
.h-text-dark4{
	color: var(--dark4);
}


