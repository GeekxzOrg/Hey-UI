/* pages/response/message/message.wxss */
@import '/pages/tpl/top/index.wxss';
.anit{
  width: 100%;
  height: 70rpx;
  position: absolute;
  color: white;
  font-size: 30rpx;
  line-height: 70rpx;
  top: -70rpx;
  text-align: center;
}

.show{
  top: -270rpx;
  animation: show 2s;
  animation-timing-function:ease;
  z-index: 9999;
}
@keyframes show
{
  0% {top:-70rpx;}
  10% {top:0rpx;}
  80% {top:0rpx;}
  100% {top:-70rpx;}
}