<!--pages/about/about.wxml-->
<view class="UCenter-bg">
  <image src="/images/logo.jpg" class="png" mode="widthFix"></image>
  <view class="h-text-lg h-text-black">HeyUI组件库
    <text class="h-text-sm">v1.0</text>
  </view>
  <view class="m-t-sm h-text-black">
    <text>By:陈东东</text>
  </view>
  <!-- <image src="https://raw.githubusercontent.com/weilanwl/HeyUI/master/demo/images/wave.gif" mode="scaleToFill" class="gif-wave"></image> -->
</view>
<view class="p h-flex h-text-center h-text-grey h-bg-white">
  <view class="h-flex h-flex-sub h-flex-direction h-border-right">
    <view class="h-text-md h-text-orange">{{visitTotal}}</view>
    <view class="m-t-sm">
      <text class="heyui-attentionfill"></text> View</view>
  </view>
  <view class="h-flex h-flex-sub h-flex-direction h-border-right">
    <view class="text-md text-blue">{{starCount}}</view>
    <view class="m-t-sm">
      <text class="heyui-favorfill"></text> Star</view>
  </view>
  <view class="h-flex h-flex-sub h-flex-direction">
    <view class="h-text-md h-text-green">{{forksCount}}</view>
    <view class="m-t-sm">
      <text class="heyui-fork"></text> Fork</view>
  </view>
</view>

<view class="h-list menu card-menu m-tb">
  <view class="h-item h-arrow">
    <view class="content" bindtap="copyLink" data-link="https://github.com/geekxzClub">
      <text class="heyui-github text-grey"></text>
      <text class="text-grey">GitHub</text>
    </view>
  </view>
  <view class="h-item h-arrow">
    <navigator class="content" url="/pages/about/about/about" hover-class="none">
      <image src="/images/logo.jpg" class="png" mode="aspectFit"></image>
      <text class="text-grey">关于HeyUI组件库</text>
    </navigator>
  </view>
  <view class="h-item h-arrow">
    <navigator class="content" url="/pages/about/log/log" hover-class="none">
      <text class="heyui-formfill text-green"></text>
      <text class="text-grey">日志</text>
    </navigator>
  </view>
  <view class="h-item h-arrow">
    <view class="content" bindtap="showQrcode">
      <text class="heyui-appreciatefill text-red"></text>
      <text class="text-grey">赞赏支持</text>
    </view>
  </view>
  <view class="h-item h-arrow">
    <button class="h-btn content" open-type="feedback">
      <text class="heyui-writefill text-cyan"></text>
      <text class="text-grey">意见反馈</text>
    </button>
  </view>
  <view class="h-item h-arrow">
    <navigator class="content" url="/pages/about/test/list" hover-class="none">
      <text class="heyui-creativefill text-orange"></text>
      <text class="text-grey">Bug测试</text>
    </navigator>
  </view>
</view>



