/* pages/search/search.wxss */
.search-car{
    height: 80rpx;
    line-height: 80rpx;
    background-color: #ffffff;
    border-bottom: 1rpx solid #e6e6e6;
}
.search-english{
    height: 40rpx;
    background-color: #f0f0f0;
    line-height: 40rpx;
    padding-left: 20rpx;
    font-size: 28rpx;
    color: #000000;
}
scroll-view{
    z-index: 20;
}
image{
    height: 60rpx;
    width: 60rpx;
    margin: 0 20rpx;
    display: inline-block;
    vertical-align: middle;
}
.index-english{
    position: absolute;
    width: 60rpx;
    height: auto;
    right: 20rpx;
    top: 0;
    font-size: 28rpx;
    background-color: rgba(255, 255, 255, 0.6);
    /* border: 2rpx solid rgba(0, 0, 0, 0.1); */
    box-shadow: 0 1rpx 6rpx rgba(0, 0, 0, 0.1);
    text-align: center;
    padding: 20rpx 0;
    border-radius: 50rpx;
}
.index-english view{
    height: 15px;
    margin: 15rpx 0;
}
.index-name{
    text-align: center;
    position: absolute;
    top: 45%;
    left: 50%;
    transform: translate(-50%,-50%);
    color: #000000;
    width: 100px;
    height: 100px;
    font-size: 48px;
    background-color: rgba(0, 0, 0, 0.4);
    line-height: 100px;
}