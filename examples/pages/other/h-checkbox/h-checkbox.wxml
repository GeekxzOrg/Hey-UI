<!--pages/other/h-checkbox/h-checkbox.wxml-->
<view class="h-bg-white m">
  <view class="h-grid h-grid-4">
    <view class="h-radio-view h-text-center {{item.isSelect?'h-bg-red h-text-white':'h-bg-white'}}" wx:for="{{applyList}}" wx:key="item" bindtap='selectApply'  data-index='{{index}}'>{{item.item_name}}</view>
  </view>
</view>

<view class="h-bg-white m">
  <view class="h-grid h-grid-4">
      <view class="h-radio-view h-text-center {{item.isSelect?'h-bg-red h-text-white':'h-bg-white'}}" wx:for="{{applyList}}" wx:key="item" bindtap='selectApply'  data-index='{{index}}'>{{item.item_name}}</view>
  </view>
</view>

<view class="h-bg-white m">
  <view class="h-grid h-grid-4">
    <view class="h-radio-view h-text-center {{item.isSelect?'h-bg-primary':'h-bg-white'}}" wx:for="{{applyList}}" wx:key="item" bindtap='selectApply'  data-index='{{index}}'>{{item.item_name}}</view>
  </view>
</view>

<view class="h-bg-white m">
  <view class="h-grid h-grid-4">
