  </view>
</view>

<view class="h-text-center">       
  <view class="h-btn fl m-lr-sm h-btn-lg h-corner-sm {{item.isSelect?'h-bg-yellow':'h-bg-teanslucent'}}" wx:for="{{applyList}}" wx:key="item" bindtap='selectApply'  data-index='{{index}}'>{{item.item_name}}</view>
</view>
