/* pages/other/select/select.wxss */
.h-select-nav {
  position: fixed;
  width: 100%;
  z-index: 99;
  display: flex;
  height: 80rpx;
}
.h-select-nav-son {
  display: flex;
  flex: 1;
  text-align: center;
  align-items: center;
  justify-content: center;
}
.h-select-nav-son.active>view {
  color: #1d57a0;
}
.h-select-icon {
  display: inline-block;
  border: 10rpx solid transparent;
  border-top: 10rpx solid #666;
  margin-left: 10rpx;
  margin-top: 10rpx;
}

.temp {
  position: fixed;
  top: 80rpx;
  z-index: 4;
  background: #fff;
  z-index: 50;
}
.price {
  display: none;
  width: 100%;
  max-height: 550rpx;
  overflow-y: scroll;
  line-height: 100rpx;
  z-index: 50;
}
.sort {
  display: none;
  width: 100%;
  max-height: 750rpx;
  overflow-y: scroll;
  line-height: 100rpx;
  z-index: 50;
}

.slidedown {
  transform: translateY(0%);
}



.h-metro {
  position: fixed;
  width: 100%;
  /* 区域的筛选：默认状态下不显示 */
  display: none;
  height: 800rpx;
  z-index: 50;
  top: 80rpx;
}
.h-metro .h-other {
  overflow-y: scroll;
  float: left;
  width: 33.33%;
  height: 82%;
  line-height: 80rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #717273;
  border-right: 1rpx solid #f4f4f4;
}
.h-other view {
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  padding-left: 45rpx;
  border-bottom: 1rpx solid #f4f4f4;
}

.fullbg {
  position: fixed;
  top: 132rpx;
  z-index: 1;
  width: 100%;
  height: 100%;
  background: rgb(1, 1, 1);
  transition: all 2s;
  opacity: 0;
  z-index: 20;
}
.fullopacity {
  opacity: 0.5;
}

@keyframes slidown {
  from {
    transform: translateY(-100%);
  }
  to {
    transform: translateY(0%);
  }
}
.slidown {
  display: block;
  animation: slidown 0.7s ease-in both;
}
@keyframes slidup {
  from {
    transform: translateY(0%);
  }
  to {
    transform: translateY(-100%);
  }
}
.slidup {
  display: block;
  animation: slidup 0.7s ease-in both;
}
.disappear {
  display: none;
}
button::after {
  border: none;
}
button {
  width: 50%;
  border-radius: 0;
  display: flex;
  justify-content: center;
  align-items: center;
}
.form-btn {
  width: 100%;
  display: flex;
  height: 98rpx;
}


.sliderHView {
  height: 250rpx;
  width: 70%;
  margin: auto;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  background-color: #fff;
}

.valueSty {
  text-align: center;
}


.twoSlider {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}



.contents{
  min-height: 1000rpx;
  z-index:1;
  position: relative;
  top: 80rpx;
}