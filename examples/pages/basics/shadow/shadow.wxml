<!--pages/basics/shadow/shadow.wxml-->
<view class="h-bar p-l">
    <text class="h-text-sm h-text-bold h-text-black">边框border</text>
</view>
<view class="p-lr h-text-center p-b-xs">
  <view class="h-bg-success p-tb h-corner-xs h-border-top m-b-xs">
    <text class="h-text-sm h-text-center h-text-height">上边框</text>
  </view>
  <view class="h-bg-blue p-tb h-corner-xs h-border m-b-xs">
    <text class="h-text-sm h-text-center h-text-height">四周边框</text>
  </view>
  <view class="h-bg-error p-tb h-corner-xs h-border-left m-b-xs">
    <text class="h-text-sm h-text-center h-text-height">左边框</text>
  </view>      
  <view class="h-bg-white p-tb h-corner-xs h-dashed m-b-xs">
    <text class="h-text-sm h-text-center h-text-height">虚线</text>
  </view>
  <view class="h-bg-warning p-tb h-corner-xs h-border-right m-b-xs">
    <text class="h-text-sm h-text-center h-text-height">右边框</text>
  </view>
  <view class="h-bg-primary p-tb h-corner-xs h-border-bottom m-b-xs">
    <text class="h-text-sm h-text-center h-text-height">下边框</text>
  </view>
</view>

<view class="h-bar p-l">
  <text class="h-text-sm h-text-bold h-text-black">阴影shadow</text>
</view>
<view class="p-lr h-text-center">
  <view class="h-bg-white m-b p-tb h-corner-xs h-shadow">
    <text class="h-text-sm h-text-grey h-text-center h-text-height">默认阴影</text>
  </view>
  <view class="h-bg-blue m-b p-tb h-corner-xs h-shadow">
    <text class="h-text-sm h-text-white h-text-center h-text-height">根据背景颜色改变阴影</text>
  </view>
  <view class="h-bg-white m-b p-tb h-corner-xs h-shadow-lg">
    <text class="h-text-sm h-text-grey h-text-center h-text-height">长阴影</text>
  </view>
  <view class="h-bg-green m-b p-tb h-corner-xs h-shadow">
    <text class="h-text-sm h-text-white h-text-center h-text-height">根据背景颜色改变长阴影</text>
  </view>
  <view class="h-bg-white m-b p-tb h-corner-xs h-shadow-warp">
    <text class="h-text-sm h-text-grey h-text-center h-text-height">翘边阴影</text>
  </view>
  <view class="m-b p-tb h-shadow-img h-bg-img" style="background-image:url(https://oss.geekxz.com/hey-ui-oss/banner/banner1.jpg);">
    <text class="h-text-sm h-text-white h-text-center h-text-height">更具图片该表面的阴影</text>
  </view>
</view>
