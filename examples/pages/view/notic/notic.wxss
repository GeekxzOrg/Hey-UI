/* pages/view/notic/notic.wxss */
@import '/pages/tpl/top/index.wxss';
.h-notic {
  display: block;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
}
.h-notic-box {
  width: 100%;
  position: relative;
}
.h-notic-text {
  white-space: nowrap;
  position: absolute;
  top: 0;
  height: 80rpx;
  line-height: 80rpx;
}

.h-notic-container {
  height: 80rpx;
  width: 100%;
  line-height: 80rpx;
}
.h-notic-item {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}