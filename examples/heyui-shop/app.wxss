/* 订单 order */
.order-item:last-child{
  margin-bottom: 30rpx;
}
.order-item .order-top{
  height: 100rpx;
  line-height: 100rpx;
}
.order-item .order-center{
  height: 220rpx;
  line-height: 220rpx;
}
.order-item .order-center image{
  height: 180rpx;
  width: 180rpx;
  float: left
}
.order-item .order-center .txt{
  float: left;
  width: 40%;
}
.order-item .order-center .txt text{
  height: 110rpx;
  line-height: 110rpx;
  display: block;
  clear: both;
}
.order-item .order-center .txt text:first-child{
  height: 110rpx;
  line-height: 150rpx;
}
.order-item .order-center .txt text:last-child{
  height: 110rpx;
  line-height: 70rpx;
}
.order-item .order-bottom{
  height: 100rpx;
}
.order-item .order-bottom .price{
  height: 100rpx;
  line-height: 100rpx;
  width: 40%;
  float: left;
}
.order-item .order-bottom button{
  height: 60rpx;
  line-height: 60rpx;
  width: 120rpx;
  float: right;
  padding: 0;
}
.order-status{
  float:right;
  font-size: 26rpx;
}
.order-status view{
  height: 80rpx;
  line-height: 80rpx;
  background: #f1f1f1;
}

