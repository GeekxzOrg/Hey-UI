/* 优惠券 coupon */
.h-coupon-box{
  height: 200rpx;
  justify-content: center;
  align-items: center;
  background: #fff;
  border: 1px solid #f1f1f1;
}
.h-coupon-box .h-coupon-item{
  flex-direction: column;
  height: 100%;
  position: relative;
}
.h-coupon-box .h-coupon-item:nth-child(1){
  width: 70%;
  border-right: 1px solid #f1f1f1;
}
.h-coupon-box .h-coupon-item:nth-child(2){
  width: 30%;
}

.h-coupon-box .h-coupon-item:nth-child(1) view:nth-child(2){
  height: 70rpx;
  line-height: 70rpx;
}



/* 积分 */
.h-score-box{
  height: 0rpx;
  z-index: 1;
}
.h-score{
  height: 260rpx;
  z-index: 3;
}
.h-score-content,.h-score-img{
  width: 50%;
}
.h-score-img image{
  width: 100%;
  height: 240rpx;
}
.h-score-card{
  width: 92%;
  height: 320rpx;
  position: relative;
  top: 0rpx;
}
.h-score-tit{
  height: 80rpx;
  line-height: 80rpx;
}
.h-score-num{
  height: 80rpx;
  line-height: 60rpx;
  font-size: 60rpx;
  letter-spacing: 2rpx;
}
.h-score-btn{
  height: 80rpx;
  line-height: 80rpx;
}
