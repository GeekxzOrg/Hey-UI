<!--pages/detail/detail.wxml-->
<swiper class="screen-swiper square-dot" current="{{current}}" duration="500" bindchange="bannerChage">
  <swiper-item wx:for="{{swiperList2}}" wx:key='item'>
    <image src="{{item.url}}" mode="aspectFill" wx:if="{{item.type=='image'}}"></image>
      <video id="bannerVideo" src="{{item.url}}" autoplay objectFit='cover' controls wx:if="{{item.type=='video'}}"></video>
  </swiper-item>
</swiper>
<view class="h-bg-white p-b m-b h-corner-blr-sm">
  <view class="h-flex h-corner-tlr-sm">
    <view class="h-series h-flex-sub h-bg-white">
      <view class="h-series-content p-lr-lg p-tb-sm">      
        <view class="h-status h-text-sm h-bg-pink h-text-white">￥18222</view>
        <view class="h-series-tit h-text-sm h-text-cut">一见倾心 真爱礼赞</view>
        <view class="h-series-time h-text-s h-text-gray">赞颂动人爱情</view>
        <view class="h-view-time h-border-top p-lr-lg">
          <view class="h-fl h-text-s h-text-gray">          
            <text class="heyui-time"> 42天</text>
          </view>
          <view class="h-fr h-text-s h-text-gray">
            <text class="heyui-attention"> 12313</text>
            <!-- <text class="heyui-message m-l-sm"> 77454</text> -->
            <text class="heyui-appreciate m-l-sm"> 77454</text>
          </view>
        </view>
      </view>
    </view>  
  </view>
</view>



<view class="h-list menu h-corner-tlr-sm">
  <view class="h-item h-arrow h-bg-white" bindtap='showModal' data-target="popupParma">
    <view class="content">
      <text class="h-text-black">商品参数</text>
    </view>
    <view class="action">
      <text class="h-text-black h-text-s">查看更多</text>
