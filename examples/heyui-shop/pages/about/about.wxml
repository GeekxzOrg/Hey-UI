<!--pages/about/about.wxml-->
<!-- 个人信息 -->
<view class="user-box h-bg-primary h-corner-blr-md">
  <view class="h-list menu-avatar p-t-sm">
    <view class="h-item">
      <view class="h-avatar h-avatar-lg h-corner-lg" style="background-image:url(https://oss.geekxz.com/hey-ui-oss/avatar/a5.jpg);"></view>
      <view class="content">
        <view class="h-text-white">
          <text class="h-text-cut h-text-md">Hey-ui</text>
          <view class="h-tag h-tag-sm h-corner-lg h-bg-gray m-l-sm">设置手机号</view>
        </view>
        <view class="h-text-white h-text-s h-flex">
          <text class="h-text-cut">
              <text class="h-text-white"></text> 我已天理为凭，踏入这片荒芜，不再受凡人的枷锁遏制。
          </text>
        </view>
      </view>
      <view class="action">
        <view class="heyui-right h-text-white h-text-sm"></view>
      </view>
    </view>
  </view>
</view>

<!-- vip -->
<view class="vip-box h-corner-sm m h-shadow">
  <view class="vip h-bg-black h-corner-tlr-sm"></view>
  <view class="h-list h-grid h-grid-3 no-border h-corner-blr-sm">
    <view class="h-item">
      <view class="iconfont heyui-31huiyuanqia h-text-yellow"></view>
      <text>我的会员</text>
    </view>
    <view class="h-item">
      <view class="iconfont heyui-shengriliwu h-text-yellow"></view>
      <text>新人礼包</text>
    </view>
    <view class="h-item">      
      <navigator url="/pages/score/score" hover-class="navigator-hover">
      <view class="iconfont heyui-jifen h-text-yellow"></view>
      <text>积分兑换</text>
      </navigator>
    </view>
  </view>
</view>
<view class="my-order"></view>

